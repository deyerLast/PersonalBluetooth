<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/control_led_on"
            android:text="@string/on"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/control_led_off" app:layout_constraintVertical_bias="0.619"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/control_led_off"
            android:text="@string/off"
            android:layout_marginBottom="52dp" app:layout_constraintBottom_toTopOf="@+id/control_led_disconnect"
            app:layout_constraintEnd_toEndOf="@+id/control_led_on"
            app:layout_constraintStart_toStartOf="@+id/control_led_on"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/control_led_disconnect"
            android:text="@string/disconnect"
            android:layout_marginBottom="132dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="@+id/control_led_off"
            app:layout_constraintEnd_toEndOf="@+id/control_led_off"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/beep"
            android:text="@string/beep"
            app:layout_constraintEnd_toStartOf="@+id/control_led_on" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/control_led_on"
            app:layout_constraintTop_toTopOf="@+id/control_led_on"/>

</android.support.constraint.ConstraintLayout>